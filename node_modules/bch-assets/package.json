{
    "name": "bch-assets",
    "version": "3.22.0",
    "private": true,
    "description": "Repositorio para los assets comunes como fuentes, imagenes y animaciones",
    "scripts": {
        "crear": "node ./scripts/images.js",
        "validar-icons": "node ./scripts/icon.js",
        "release": "standard-version"
    },
    "standard-version": {
        "compareUrlFormat": "http://bitbucket.bch.bancodechile.cl:7990/projects/POCM/repos/bch-assets/compare/commits?targetBranch=refs%2Ftags%2F{{previousTag}}&sourceBranch=refs%2Ftags%2F{{currentTag}}&targetRepoId=5999",
        "commitUrlFormat": "http://bitbucket.bch.bancodechile.cl:7990/projects/POCM/repos/bch-assets/commits/{{hash}}"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "compress-images": "^1.9.8",
        "deep-sort-object": "1.0.2",
        "gifsicle": "^5.1.0",
        "husky": "8.0.2",
        "js-beautify": "1.10.1-rc2",
        "pngquant-bin": "^6.0.0",
        "standard-version": "9.0.0"
    }
}
