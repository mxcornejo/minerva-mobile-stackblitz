{
    "name": "bch-mobile-comprobante",
    "version": "3.3.3",
    "private": false,
    "scripts": {
        "clean-node": "rm -rf node_modules/ && yarn install",
        "prettier": "prettier --write 'src/**/*.js'",
        "release": "standard-version",
        "sonar": "npx eslint src -o ./eslint-report.json --format json; npx jest --config=jest/jest.config.js --detectOpenHandles; node sonarScanner",
        "test": "jest --config=jest/jest.config.js --detectOpenHandles",
        "lint": "eslint .",
        "lint:js": "npx eslint src",
        "lint:js:fix": "npx eslint src --fix",
        "lint:report": "npx eslint src -o ./eslint-report.json --format json"
    },
    "standard-version": {
        "compareUrlFormat": "http://bitbucket.bch.bancodechile.cl:7990/projects/INVA/repos/bch-mobile-comprobante/compare/commits?targetBranch=refs%2Ftags%2F{{previousTag}}&sourceBranch=refs%2Ftags%2F{{currentTag}}&targetRepoId=5999",
        "commitUrlFormat": "http://bitbucket.bch.bancodechile.cl:7990/projects/INVA/repos/bch-mobile-comprobante/commits/{{hash}}"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "rnpm": {
        "assets": [
            "./node_modules/bch-assets/fonts"
        ]
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.16.5",
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@react-native-community/datetimepicker": "3.5.2",
        "@react-native-community/masked-view": "0.1.11",
        "@react-native-picker/picker": "2.2.0",
        "@react-navigation/bottom-tabs": "5.11.10",
        "@react-navigation/native": "5.9.4",
        "@react-navigation/stack": "5.14.4",
        "@testing-library/react-native": "^8.0.0",
        "babel-jest": "^27.3.1",
        "bch-mobile-constants": "git+ssh://git@bitbucket.bch.bancodechile.cl:7999/inva/bch-mobile-constants.git#v2.1.0",
        "eslint": "^8.8.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-react-native": "^4.0.0",
        "eslint-plugin-sonarjs": "^0.11.0",
        "husky": "^6.0.0",
        "jest": "^27.3.1",
        "jest-sonar-reporter": "^2.0.0",
        "lint-staged": ">=10",
        "lottie-ios": "3.2.3",
        "lottie-react-native": "4.1.3",
        "prettier": "^2.5.1",
        "react": "^17.0.2",
        "react-native": "^0.66.3",
        "react-native-gesture-handler": "1.10.3",
        "react-native-linear-gradient": "2.5.6",
        "react-native-minerva": "git+ssh://git@bitbucket.bch.bancodechile.cl:7999/inva/react-native-minerva.git#master",
        "react-native-reanimated": "2.2.4",
        "react-native-safe-area-context": "3.3.2",
        "react-native-screens": "2.18.1",
        "react-native-share": "7.1.2",
        "react-native-view-shot": "3.3.0",
        "react-test-renderer": "^17.0.2",
        "sonarqube-scanner": "^2.8.1",
        "standard-version": "^9.3.0",
        "@bch/eslint-config": "git+ssh://git@bitbucket.bch.bancodechile.cl:7999/inva/eslint-config-bch.git#v1.6.0",
        "@bch/prettier-config": "git+ssh://git@bitbucket.bch.bancodechile.cl:7999/inva/prettier-config-bch.git#v1.1.1"
    },
    "jest": {
        "preset": "react-native"
    },
    "eslintIgnore": [
        "*.obfuscated.js",
        "jest/*.js"
    ],
    "jestSonar": {
        "reportPath": "coverage",
        "reportFile": "test-report.xml",
        "indent": 4,
        "env": {
            "test": {
                "reportPath": "coverage"
            }
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --cache --fix",
            "prettier --write"
        ]
    }
}
